# .env (Located at ./EduVial-Backend/.env)

# === Variables for Backend Application (src/config/config.js) ===
DB_HOST=db                     # Use the service name 'db'
DB_PORT=5432                   # Internal port PostgreSQL listens on
DB_USER=EduVial-team           # Must match POSTGRES_USER below
DB_PASSWORD=eduvialteam        # Must match POSTGRES_PASSWORD below
DB_NAME=EduVial_BD             # Must match POSTGRES_DB below
DB_DIALECT=postgres

# === Variables for PostgreSQL Container Initialization ===
POSTGRES_USER=EduVial-team     # User the DB container will create/use
POSTGRES_PASSWORD=eduvialteam  # Password for the DB user
POSTGRES_DB=EduVial_BD         # Database the container will create

# === Other Application Variables ===
PORT=3000
NODE_ENV=development
JWT_SECRET=ESTE_ES_UN_SECRETO_TEMPORAL_CAMBIAME_POR_FAVOR
JWT_EXPIRES_IN=1d
LOG_LEVEL=debug
